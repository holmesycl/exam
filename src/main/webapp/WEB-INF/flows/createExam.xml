<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<view-state id="inputExamName">
		<transition on="nameFinish" to="inputExamTime" />
	</view-state>

	<view-state id="inputExamTime">
		<transition on="timeFinish" to="showExamEnterCode" />
		<transition on="backToName" to="inputExamName" />
	</view-state>

	<end-state id="showExamEnterCode" />

	<global-transitions>
		<transition on="cancel" to="cancel" />
	</global-transitions>

</flow>